@using Proyecto_Final.Models.Entities;
@model Cliente;



@* HTML *@


<h1 style="text-align:center">Registrarse</h1>

<a asp-action="Index" asp-controller="Cliente" style="margin-bottom:10px;">Volver</a>

<form asp-action="CreateCliente">
    <div class="form-group">
        <label asp-for="Nombre">NOMBRE</label>
        <input asp-for="Nombre" type="text" class="form-control" style="margin-top:5px;" />
    </div>

    <div class="form-group">
        <label asp-for="Apellido">APELLIDO</label>
        <input asp-for="Apellido" type="text" class="form-control" style="margin-top:5px;" />
    </div>

    <div class="form-group">
        <label asp-for="Dni">DNI</label>
        <input asp-for="Dni" type="number" class="form-control" style="margin-top:5px;" />
    </div>

    <div class="form-group">
        <label asp-for="Membresia">¿Miembro Premium?</label>
        <input asp-for="Membresia" type="checkbox"/>
    </div>

    <button type="submit" class="btn btn-outline-warning" style="margin-top:5px;">Crear cuenta</button>
</form>